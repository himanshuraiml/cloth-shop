# Supabase Configuration
# Copy this file to .env.local and fill in your actual values

# Get these from your Supabase project settings (https://supabase.com/dashboard)
# Project Settings -> API -> Project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Project Settings -> API -> Project API keys -> anon public
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Project Settings -> API -> Project API keys -> service_role (Keep this secret!)
# WARNING: Never commit this key to version control or expose it in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NextAuth Configuration
# URL of your application (use http://localhost:3000 for development)
NEXTAUTH_URL=http://localhost:3000

# Generate a random secret: openssl rand -base64 32
# IMPORTANT: Change this in production!
NEXTAUTH_SECRET=your-secret-key-change-this-in-production

